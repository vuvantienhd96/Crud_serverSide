extends ../layouts/common.pug
block content
    include ../layouts/navbar.view.pug
    div(class="container")
        div(class="row")
            div(class="col-sm")
                blockquote(class="text-center")
                    img(src="/images/5.PNG")
                    p(class="mb-0") Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.
                    div(class="blockquote-footer") Someone famous in
                        cite(title="Source title") Source Title
        
        
        div(class="row")
            div(class="col-sm")
                div(class="pl-2")
                    h2 Users 
                    a(href="/users/create") new users

                form(class="d-flex", method="GET", action="/users/search")
                        input(type="text", name="q", class="form-control w-25")
                        button(type="submit", class="btn btn-primary ml-1") search
                ul(class="list-group w-50")
                    each val in users
                        li(class="list-group-item d-flex px-1")
                            span(class="w-75")= val.name
                            span
                                a(class="badge badge-info p-1", href="/users/"+val.id) View
                            span &nbsp
                            span
                                a(class="badge badge-danger p-1", href="/users/remove/"+val.id) Remove